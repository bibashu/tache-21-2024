<!DOCTYPE html>
<html lang="en">
  <%- include('../pages/head') %>

  <body>
    <div class="wrapper">
      <!-- Sidebar -->
      <%- include('../pages/sidebar') %>
      <!-- End Sidebar -->

      <div class="main-panel">
        <div class="main-header">
          <div class="main-header-logo">
            <!-- Logo Header -->
            <%- include('../pages/logoheader.ejs') %>
            <!-- End Logo Header -->
          </div>
          <!-- Navbar Header -->
          <%- include('../pages/navbar') %>
          <!-- End Navbar -->
        </div>

        <div class="container">
          <div class="page-inner">
            <div
              class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4"
            >
              <div>
                <h3 class="fw-bold mb-3">Formulaire d'ajout</h3>
                <h6 class="op-7 mb-2">Quizz</h6>
              </div>
              <div class="ms-md-auto py-2 py-md-0">
                <a href="/quizz" class="btn btn-primary btn-round"
                  >Lister quizz</a
                >
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <div class="card-title">Formulaire Ajout</div>
                  </div>

                  <div class="card-body">
                    <div class="row">
                      <form
                        action="/quizz/submitModule"
                        method="POST"
                        class="col-md-12 col-lg-12"
                      >
                        <!-- Titre -->
                        <div class="form-group">
                          <label for="titre">Titre</label>
                          <input
                            name="titre"
                            type="text"
                            class="form-control"
                            id="titre"
                            required
                            placeholder="ex: Quizz javascript"
                          />
                        </div>

                        <!-- SÃ©lection du cours -->
                        <div class="form-group">
                          <label for="exampleFormControlSelect1">Cours</label>
                          <select
                            class="form-select"
                            id="exampleFormControlSelect1"
                            name="coursId"
                            required
                          >
                            <option value="" disabled selected>
                              Choisissez un cours
                            </option>
                            <% cours.forEach(cour => { %>
                            <option value="<%- cour._id %>">
                              <%- cour.nom_cours %>
                            </option>
                            <% }) %>
                          </select>
                        </div>

                        <div id="questions"></div>

                        <div class="form-group">
                          <button
                            type="button"
                            id="addQuestionButton"
                            class="btn btn-secondary"
                          >
                            Ajouter une question
                          </button>
                          <button
                            type="button"
                            class="btn btn-warning"
                            id="cancelButton"
                          >
                            Annuler
                          </button>
                        </div>
                        <!-- Description -->
                        <div class="form-group">
                          <label for="description">Description</label>
                          <textarea
                            class="form-control"
                            name="description"
                            id="description"
                            rows="5"
                          ></textarea>
                        </div>

                        <!-- Actions -->
                        <div class="card-action">
                          <button
                            class="btn btn-success"
                            type="submit"
                           
                          >
                            Ajouter
                          </button>
                          <button class="btn btn-danger" type="reset">
                            Annuler
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%- include('../pages/footer') %>
      </div>

      <%- include('../pages/js') %>
    </div>
  </body>
</html>
